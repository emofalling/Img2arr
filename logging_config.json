{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
        "simple": {
            "()": "lib.logging_formatter.ColoredFormatter",
            "format": "[%(asctime)s.%(msecs)06d] %(levelname)s(%(name)s:%(lineno)d): %(message)s",
            "datefmt": "%H:%M:%S"
        }
    },
    "handlers": {
        "console": {
            "class": "logging.StreamHandler",
            "level": "DEBUG",
            "formatter": "simple",
            "stream": "ext://sys.stdout"
        }
    },
    "root": {
        "level": "DEBUG",
        "handlers": ["console"]
    }
}